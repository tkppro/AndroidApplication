<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sourcecode.thangdang.inputeventexercise.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chương trình tính toán"
        android:textSize="30dp"
        android:textColor="@color/titleColor"
        android:background="@color/title_background_color"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số a:"
                android:textSize="25dp"

                />

            <EditText
                android:id="@+id/edt_first_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tv1"
                android:inputType="number"
                android:hint="Nhập số"/>
        </RelativeLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số b:"
                android:textSize="25dp"
                />
            <EditText
                android:id="@+id/edt_second_number"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tv2"
                android:inputType="number"
                android:hint="Nhập số"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_result"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/resultColor"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:editable="false"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng 2 số"

        />
</LinearLayout>
